{
  "name": "@repo/db",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./table": "./src/table/index.ts"
  },
  "scripts": {
    "db:push": "bun --bun drizzle-kit push:sqlite",
    "db:pull": "drizzle-kit introspect:sqlite",
    "db:generate": "bun drizzle-kit generate",
    "db:drop": "drizzle-kit drop",
    "db:up": "drizzle-kit up:sqlite",
    "db:check": "drizzle-kit check:sqlite",
    "db:migrate": "bun run ./src/migration/index.ts",
    "check": "biome check ./",
    "check:ci": "biome ci ./",
    "check:fix": "biome check --write --unsafe ./",
    "type": "tsc --noEmit --skipLibCheck",
    "ci": "pnpm run check:ci && pnpm run type"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.22.8"
  },
  "dependencies": {
    "@libsql/client": "^0.6.2",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
